# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


POST        /api/create             controllers.Application.createDocument

POST        /api/read               controllers.Application.readDocument

POST        /api/update             controllers.Application.updateDocument

DELETE      /api/delete/:id         controllers.Application.deleteDocument(id: String)
